</header>


<main>
  <div class="container">
    <div class="row">

      <div class="col m3 s12">
        <div>
          <ul id="project-list" class="side-nav fixed project-list" style="top: auto ; transform: translateX(0%);">
            <li class="bold">
              <a id="singles" href="#" class="collapsible-header waves-effect waves-teal">头脑风暴</a>
            </li>

            <li class="divider"></li>

            <li class="no-padding">
              <ul class="collapsible collapsible-accordion">
                <li class="bold"><a class="collapsible-header waves-effect waves-teal active">工作台</a>
                  <div class="collapsible-body">
                    <ul>
                      <li><a href="badges.html">今日待办</a></li>
                      <li><a href="buttons.html">明日待办</a></li>
                      <li><a href="breadcrumbs.html">日程安排</a></li>
                    </ul>
                  </div>
                </li>

                <li class="divider"></li>

                <li class="bold"><a class="collapsible-header waves-effect waves-teal active">项目</a>
                  <div class="collapsible-body">
                    <ul>
                      {{#each model.projects as |project| }}
                        {{#project-list p=project}}
                          111
                        {{/project-list}}
                      {{/each}}
                    </ul>
                  </div>
                </li>

                <li class="divider"></li>

                <li class="bold"><a class="collapsible-header waves-effect waves-teal">后期</a>
                  <div class="collapsible-body">
                    <ul>
                      <li><a href="badges.html">已完成</a></li>
                      <li><a href="buttons.html">垃圾箱</a></li>
                    </ul>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>


      <div class="col m9 s12">
        <div id="page-content" class="container">
          <div class="row">
            <div class="input-field col s12">
              <input id="new-task" v-model="newTask" type="text">
              <label id="input-name" for="new-task">{{ name }}</label>
            </div>
          </div>

          <div id="task-list" class="collection">
            <a href="#modal" class="collection-item" v-for="task in tasks">
              {{ task.name }}
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>


  <!-- Modal Structure -->
  <div id="modal" class="modal">
    <div class="modal-content">
      <div class="clock" style="margin:2em;"></div>
    </div>
    <div class="modal-footer">

      <button id="cancel-timer"
              class="waves-effect waves-green btn-flat btn-block">取消
      </button>
      <button id="start-timer"
              class="waves-effect waves-green btn-flat btn-block">开始
      </button>
    </div>
  </div>


</main>

<script type="text/javascript">
  $(document).ready(function () {
    $('.collapsible').collapsible(); //select
    $('.modal').modal(); //modal
  });
</script>
